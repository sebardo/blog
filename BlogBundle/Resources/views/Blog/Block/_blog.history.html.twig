<!-- History -->
<div class="panel panel-primary history">
    <div class="panel-heading">
        <h4>{{ 'blog.history' | trans | upper}}</h4>
    </div>
    <div class="panel-body">
        <ul class="list-inline list">
            {% for key, value in history%}
                {% if key == 'now'|date('Y')%}
                    <li><a id="{{key}}" class="year"> <span class="pasive" style="display: none">></span> <span class="active" style="display: inline-block"><</span>  {{key}} ({{ countArrayValues(history[key])}})</a>
                        <ul style="display: block">
                        {% for ke, val in value%}
                            <li><a class="month" id="{{key}}-{{value[ke][0]['month']}}"> <span class="pasive">></span> <span class="active" ><</span> {{ke | trans }} ({{value[ke]|length}})</a>
                                <ul>
                                {% for k, v in val%}
                                    <li><a class="blog-history-title" id="" href="{{path("blog_blog_show", {slug: v.slug})}}">{{v.title}}</a></li>
                                {%endfor%}
                                </ul>
                            </li>
                        {%endfor%}
                        </ul>
                    </li>
                {% else %}
                    <li><a id="{{key}}" class="year"> <span class="pasive">></span> <span class="active" ><</span>  {{key}} ({{ countArrayValues(history[key])}})</a>
                        <ul>
                        {% for ke, val in value%}
                            <li><a class="month" id="{{key}}-{{value[ke][0]['month']}}"> <span class="pasive">></span> <span class="active" ><</span> {{ke | trans }} ({{value[ke]|length}})</a>
                                <ul>
                                {% for k, v in val%}
                                    <li><a class="blog-history-title" id="" href="{{path("blog_blog_show", {slug: v.slug})}}">{{v.title}}</a></li>
                                {%endfor%}
                                </ul>
                            </li>
                        {%endfor%}
                        </ul>
                    </li>
                {% endif %}
                
            {% else %}
                {{ 'blog.no.entry' | trans }}
            {%endfor%}
        </ul>
     </div>
</div>
        
        
