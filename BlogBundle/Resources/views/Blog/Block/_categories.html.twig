<!-- Categories -->      
<div class="panel panel-primary">
    <div class="panel-heading">
        <h4 class="text-uppercase">{{ 'blog.categories' | trans  }}</h4>
    </div>
    <div class="panel-body">
        <ul class="list-inline">
            {% for category in get_blog_categories() %}
                <li>
                    <a href="{{ path('blog_blog_category', {'category': category.slug }) }}">
                        <i class="ion-ios-arrow-right"></i> {{ category.name }}({{ category.posts | length }})
                    </a>
                </li>
            {% else %}
                <div class="text-center">{{ 'blog.no.entry' | trans }}</div>
            {% endfor %}  
        </ul>
    </div>
</div>