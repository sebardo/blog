<div class="tags row col-md-9 col-sm-9 col-xs-7">
    TAGGED 
    {% for tag in post.tags %}
        <a href="{{ path('blog_blog_tag', {'tag': tag.slug }) }}">
            <div style="display: inline-block">{{ tag.name }} ({{ tag.posts | length }})</div>
        </a>{{ (not loop.last) ? ',' : ''}} 
    {% endfor %}     
</div>


<div class="row col-md-3 col-sm-3 col-xs-6 pull-right text-right commentMobile ">
    {% if comments is defined %}
        {% if comments | length >  1%}
            {{comments | length}}&nbsp;COMENTARIOS
        {% elseif comments | length ==  1%}
            {{comments | length}}&nbsp;COMENTARIO
        {% else %}
            {{comments | length}}&nbsp;COMENTARIO
        {% endif %}
    {% else %}
        {% if post.comments | length >  1%}
            {{post.comments | length}}&nbsp;COMENTARIOS
        {% elseif post.comments | length ==  1%}
            {{post.comments | length}}&nbsp;COMENTARIO
        {% else %}
            {{post.comments | length}}&nbsp;COMENTARIO
        {% endif %}
    {% endif %}
</div>